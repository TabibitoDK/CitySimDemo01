FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}

solvers
{
    p
    {
        // Use a Krylov solver that avoids GAMG's coarsest-level PCG path,
        // which can still FPE on marginal meshes.
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0;
        maxIter         200;
    }

    pFinal
    {
        $p;
        tolerance       1e-09;
        relTol          0;
    }

    U
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.1;
    }

    UFinal
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
        relTol          0;
    }

    k
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.1;
    }

    epsilon
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.1;
    }
}

SIMPLE
{
    // snappyHexMesh often creates non-orthogonal cells; use extra correctors
    nNonOrthogonalCorrectors 3;
    consistent      yes;
    pRefCell        0;
    pRefValue       0;

    residualControl
    {
        p           1e-3;
        U           1e-4;
        "(k|epsilon)" 1e-4;
    }
}

relaxationFactors
{
    fields
    {
        p           0.1;
    }

    equations
    {
        U           0.3;
        k           0.3;
        epsilon     0.3;
    }
}
