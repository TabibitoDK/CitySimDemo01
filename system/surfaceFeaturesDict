FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      surfaceFeaturesDict;
}

// Triangulated surface format; reads from constant/geometry by default
surfaceFormat   triSurfaceMesh;

// Input geometry inside constant/geometry
surfaces
(
    "constant/geometry/city_buildings.stl"
);

// Capture sharp building edges; higher angle keeps fewer features
includedAngle   150;

// Extra outputs not needed for snappy
writeObj        no;
