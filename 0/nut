boundaryField
{
    inlet
    {
        type            calculated;
        value           uniform 0;
    }
    outlet
    {
        type            calculated;
        value           uniform 0;
    }
    ground
    {
        // Special wall function for Atmospheric roughness
        type            nutkAtmRoughWallFunction; 
        z0              uniform 0.5; // Must match the U file z0
        value           uniform 0;
    }
    buildings
    {
        type            nutkWallFunction; // Standard wall function for buildings
        value           uniform 0;
    }
    top
    {
        type            calculated;
        value           uniform 0;
    }
    sides
    {
        type            calculated;
        value           uniform 0;
    }
}